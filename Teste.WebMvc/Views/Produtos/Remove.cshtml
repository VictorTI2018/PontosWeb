@model ProdutosModel

@{
    ViewData["Title"] = "Remover Produto";
}

<form asp-action="Remove">
    <input asp-for="Id" hidden />
    <br/>
    <div class="card">
       
        <div class="card-body">
            <div class="card-title">
                <h4>Remover Produto</h4>
            </div>
            <hr/>
            <div class="row">
                <div class="col-2">
                    <label asp-for="Nome" class="control-label">Nome</label>
                </div>
                <div class="col-10 pb-3">
                    <input asp-for="Nome" class="form-control" disabled />
                </div>
                <div class="col-2">
                    <label asp-for="Pontos" class="control-label">Pontos</label>
                </div>
                <div class="col-10 pb-3">
                    <input asp-for="Pontos" class="form-control" disabled />
                </div>
                <div class="col-2">
                    <label>Categorias</label>
                </div>
                <div class="col-10">
                    <select asp-for="CategoriaId" id="categorias" name="CategoriaId" class="form-control" disabled>
                        <option value="">[Selecione uma opção]</option>
                    </select>

                </div>

                <br />
                <br />
                <div class="col-5 offset-2">
                    <a asp-action="List" class="btn btn-primary form-control">
                        Voltar
                    </a>
                </div>
                <div class="col-5">
                    <input type="submit" value="Remover" class="btn btn-success form-control" />
                </div>
            </div>
        </div>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}